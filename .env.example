# Personal AI Assistant Environment Variables
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_telegram_chat_id

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# Tavily Search API (for web search capabilities)
TAVILY_API_KEY=your_tavily_api_key

# Deployment Configuration
PORT=8080
TZ=America/Los_Angeles

# Railway.app will set these automatically:
# RAILWAY_STATIC_URL - for the app URL
# RAILWAY_GIT_COMMIT_SHA - for version tracking